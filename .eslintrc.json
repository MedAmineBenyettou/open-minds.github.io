{
	"extends": [
		"airbnb",
		"react-app",
		"prettier",
		"prettier/react"
	],
	"env": {
		"browser": true,
		"node": true,
		"jest": true
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"trailingComma": "es5",
				"singleQuote": true,
				"printWidth": 120
			}
		],
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [
					".js",
					".jsx"
				]
			}
		]
	},
	"settings": {
		"import/resolver": {
			"node": {
				"paths": [
					"src"
				]
			}
		}
	},
	"plugins": [
		"better-styled-components",
		"prettier"
	]
}